pipeline {
    agent any

    tools {
        maven 'M3'
    }

    stages {

        stage('Checkout') {
            steps {
                git 'https://github.com/jayanthis952/calculator-java.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package -DskipTests'
            }
        }

        stage('Deploy') {
            steps {
                sh '''
                scp target/calculator-java-1.0-SNAPSHOT.jar ubuntu@44.203.46.61:/home/ubuntu/

                ssh ubuntu@54.234.138.190 '
                    nohup java -jar /home/ubuntu/calculator-java-1.0-SNAPSHOT.jar &
                '
                '''
            }
        }
    }
}
