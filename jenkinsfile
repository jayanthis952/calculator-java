pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/jayanthis952/calculator-java.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean install -DskipTests'
            }
        }

        stage('Deploy') {
            steps {
                sshagent(['57067dce-1a06-4fd7-a7e0-558c735cce3f']) {
                    sh 'scp target/calculator-java-1.0-SNAPSHOT.jar ubuntu@44.203.46.61:/home/ubuntu/'
                    sh "ssh ubuntu@44.203.46.61 java -jar /home/ubuntu/calculator-java-1.0-SNAPSHOT.jar &"
                }
            }
        }
    }
}
